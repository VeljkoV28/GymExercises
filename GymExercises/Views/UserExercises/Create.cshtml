@model UserExercise

<h2>Assign Exercise to User</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="UserID" class="control-label">User</label>
        <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
    </div>
    <div class="form-group">
        <label asp-for="ExerciseID" class="control-label">Exercise</label>
        <select asp-for="ExerciseID" class="form-control" asp-items="ViewBag.ExerciseID"></select>
    </div>
    <div class="form-group">
        <label asp-for="ExerciseDate" class="control-label"></label>
        <input asp-for="ExerciseDate" class="form-control" type="date" />
        <span asp-validation-for="ExerciseDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration" class="control-label"></label>
        <input asp-for="Duration" class="form-control" type="number" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Assign" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

